{
  "name": "Fuck Distractions",
  "description": "Blocks all types of distractions while coding",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting", "webNavigation"],
  "action": {
    "default_popup": "./popup/gui.html",
    "default_icon": "./images/block.jpg"
  },
  "icons": {
    "16": "images/block-16.png",
    "32": "images/block-32.png",
    "48": "images/block-48.png",
    "64": "images/block-64.png",
    "640": "images/block.jpg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["scripts/blockyt.js"],
      "run_at": "document_end",
      "matches": [
        "https://www.youtube.com/shorts/*"
      ]
    },
    {
      "js": ["scripts/delshortsfyp.js"],
      "run_at": "document_idle",
      "matches": [
        "https://www.youtube.com/*"
      ]
    },
    {
      "js": ["scripts/blocktiktok.js"],
      "matches": [
        "https://www.tiktok.com/*"
      ]
    },
    {
      "js": ["scripts/blockinsta.js"],
      "matches": [
        "https://www.instagram.com/*"
      ]
    }
  ]
}